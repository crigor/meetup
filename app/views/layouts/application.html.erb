<!DOCTYPE html>
<html>
<head>
  <title>Meetup</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
</head>
<body>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <h3><a href="/">PinoyRB Meetup</a></h3>
          <ul>
            <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle"><%= current_user.email %></a>
              <ul class="dropdown-menu">
                <li><a href="/sso/logout">Sign out</a></li>
              </ul>
            </li>
            <% else %>
            <li><a href="/sso/login">Sign in</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  <div class="container" style="margin-top: 60px">
      <!--div class="alert-message error">
        <a class="close" href="#">&times;</a>
        <p><strong>Oh snap!</strong> Change this and that and try again.</p>
      </div-->
  <%= yield %>
  </div>

</body></html>
